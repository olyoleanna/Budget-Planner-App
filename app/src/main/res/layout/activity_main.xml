<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select bill types"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.886" />

            <CheckBox
                android:id="@+id/utilities_checkbox"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:button="@drawable/ic_utilities_icon"
                android:onClick="onCheckboxClicked"
                android:text="  Utilities"
                android:textSize="25sp" />

            <CheckBox
                android:id="@+id/gas_checkbox"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:button="@drawable/ic_gasautomible_icon"
                android:onClick="onCheckboxClicked"
                android:text="  Gas and Automobile"
                android:textSize="25sp" />

            <CheckBox
                android:id="@+id/rent_checkbox"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:button="@drawable/ic_rent"
                android:onClick="onCheckboxClicked"
                android:text="  Rent"
                android:textSize="25sp" />

            <CheckBox
                android:id="@+id/grocery_checkbox"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:button="@drawable/ic_grocery"
                android:onClick="onCheckboxClicked"
                android:text="  Grocery"
                android:textSize="25sp" />

            <CheckBox
                android:id="@+id/medical_checkbox"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:button="@drawable/ic_medical"
                android:onClick="onCheckboxClicked"
                android:text="  Medical"
                android:textSize="25sp" />

            <CheckBox
                android:id="@+id/childcare_checkbox"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:button="@drawable/ic_childcare"
                android:onClick="onCheckboxClicked"
                android:text="  Child Care"
                android:textSize="25sp" />

            <CheckBox
                android:id="@+id/pets_checkbox"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:button="@drawable/ic_pets"
                android:onClick="onCheckboxClicked"
                android:text="  Pets"
                android:textSize="25sp" />

            <CheckBox
                android:id="@+id/internet_checkbox"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:button="@drawable/ic_internetdata"
                android:onClick="onCheckboxClicked"
                android:text="  Internet and Data"
                android:textSize="25sp" />

            <CheckBox
                android:id="@+id/credit_checkbox"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:button="@drawable/ic_creditcard"
                android:onClick="onCheckboxClicked"
                android:text="  Credit Card"
                android:textSize="25sp" />

            <CheckBox
                android:id="@+id/entertainment_checkbox"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:button="@drawable/ic_entertainment"
                android:onClick="onCheckboxClicked"
                android:text="  Entertainment"
                android:textSize="25sp" />

            <Button
                android:id="@+id/nextActivityButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:onClick="floatingButtonOnClick"
                android:text="Enter amount for selected items"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_bill_edit"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>